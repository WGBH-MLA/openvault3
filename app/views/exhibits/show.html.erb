<% content_for(:page_title) do %>
  <%= t('exhbits') + ' - ' + t('blacklight.application_name') %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1>
        <%= @exhibit.title_html %>
      </h1>
      <div>
        <%= @exhibit.head_html.html_safe %>
      </div>
      <% (@tabs.keys).each do |tab| %>
        <h2 class="tab"><%= link_to_unless(tab == params[:tab], tab.titlecase, tab) %></h2>
      <% end %>
      <div>
        <%= @exhibit.tabs[params[:tab]].html_safe %>
      </div>
    </div>
  </div>
</div>


