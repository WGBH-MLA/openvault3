<% content_for(:page_title) do %>
  <%= t('exhibits') + ' - ' + t('blacklight.application_name') %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <a href="/exhibits"><%= t('exhibits') %></a>
      <%= render partial: 'shared/above_tabs', locals: {set: @exhibit} %>
    </div>
  </div>
  <%= render partial: 'shared/tab_row', locals: {skip: ['intro', 'author', 'extra']}%>
  <div class="row">
    <div class="col-md-12">
      <%= @exhibit.tabs[params[:tab]].html_safe %>
    </div>
  </div>
</div>
