<%# Moved out of _search_header. %>
<%= render 'constraints' %>

<div id="sidebar">
  <div class="container">
    <div class="row">
      <%= render 'search_sidebar' %>
    </div>
  </div>
</div>

<div id="content" class="container-fluid">
  <%# Added container-fluid for a bit more padding so margins align. %>
  <% unless has_search_parameters? %>
    <%# if there are no input/search related params, display the "home" partial -%>
    <%= render 'home' %>
  <% else %>
    <%= render 'search_results' %>
  <% end %>
</div>
