<% content_for(:page_title) do %>
  <%= t('collections') + ' - ' + t('blacklight.application_name') %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1>
        <%= @collection.title_html %>
      </h1>
      <div>
        <%= @collection.head_html.html_safe %>
      </div>
    </div>
  </div>
  <%= render partial: 'shared/tab_row' %>
  <div class="row">
    <div class="col-md-12">
      <%= @collection.tabs[params[:tab]].html_safe %>
    </div>
    <div class="col-md-12">
      <%= @collection.tabs['extra'].html_safe %>
    </div>
  </div>
</div>
