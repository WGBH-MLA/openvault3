<% content_for(:page_title) do %>
  <%= @item.title + ' - ' + t('blacklight.application_name') %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <a href="/collections"><%= t('collections') %></a>
      <%= render partial: 'shared/above_tabs', locals: {item: @item} %>
    </div>
  </div>
  <%= render partial: 'shared/tab_row', locals: {item: @item, skip: ['intro', 'extra']}%>
  <div class="row">
    <div class="col-md-12">
      <%= @item.tabs[params[:tab]].html_safe if @item.tabs[params[:tab]]%>
    </div>
    <div class="col-md-12">
      <%= @item.tabs['extra'].html_safe if @item.tabs['extra']%>
    </div>
  </div>
</div>
