<div id="header" class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <a href="/"><%= render partial: 'shared/ov_logo.svg' %></a>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <form action="/catalog">
          <input name="q" placeholder="Search..." onchange="this.form.submit()"/>
          <span class="glyphicon glyphicon-search"></span>
        </form>
      </div>
      <div class="col-md-9 hidden-sm hidden-xs nav">
        <%= link_to(t('series'), '/series') %>
        <%= link_to(t('exhibits'), '/exhibits') %>
        <%= link_to(t('collections'), '/collections') %>
      </div>
    </div>
  </div>
</div>